extends layout
block content
	.row(style="margin-top:15px;margin-bottom: 0px !important;")
		-if(GeneratorHistory.length>0)
			form(class="col s12"   name="callform")
				.row
					//- .col.input-field
					//- 	input(type="text" id="pacote" value="#{pacote}")
					.fixed-action-btn.top.fixed-add-bottom
						a(class="btn-floating btn-large activarAzul ") <i class="large material-icons activarVerde">menu</i>
						ul(id="extrairlastrefuel")
							li
								a.btn-floating.pointer.activarAzul#extrairlastrefuel(data-position="left", data-delay="10", data-tooltip="Export Callout Stats", class="btn-floating btn-large waves-effect waves-light", valor="#{pacote}") <i class="material-icons activarVerde">file_download</i>
		.row
			if(GeneratorHistory.length == 0)
				p.center-align.selmecAzul.bold <span data-i18n="demo.ttnumber_form.seminfo"></span>
			else
				.row
					.col.s12.m6
					.col.s12.m6.right.input-field
						i.material-icons.prefix search
						label(for="pesquisador") <span data-i18n="demo.pesquisar"></span>
						input(type="text", id="pesquisador", name="pesquisador", valor="#{pacote}", style="border-bottom:none !important;")
				h1.center-align.selmecAzul.bold(style="font-size: 1.5em") <span data-i18n="demo.manutencao_form.calloutreports"></span>
				fieldset.no-border.legend-border
					legend.selmecAzul.bold
				table.responsive-table.bordered.striped#myTable
					thead
						tr.selmecAzul
							th Site
							th <span data-i18n="demo.manutencao_form.typ"></span>
							th Data
							th <span data-i18n="demo.manutencao_form.oficer"></span>
							th <span data-i18n="demo.manutencao_form.region"></span>
							th <span data-i18n="demo.manutencao_form.previohour"></span>
							th Hora Actual
							th Total Hora Abastecido
							th <span data-i18n="demo.manutencao_form.Litros"></span>
							th 

					tbody(id="myTableUser1")
						-for(var index = 0; index < GeneratorHistory.length; index++)
							tr.highlight(style="font-family:;color:#12375c")
								td #{GeneratorHistory[index].sitenumber}
								td #{GeneratorHistory[index].gerador_gentype}
								td #{GeneratorHistory[index].gerador_dataregisto}
								td #{GeneratorHistory[index].gerador_jobcardmaintenanceofficer}
								td #{GeneratorHistory[index].gerador_jobcardregion}
								td #{GeneratorHistory[index].gerador_previousrefuelhours}
								td #{GeneratorHistory[index].gerador_actualhours}
								td #{GeneratorHistory[index].gerador_totalrunhour}
								td #{GeneratorHistory[index].gerador_refuellitres}
								td.center-align
									a.tooltipped.pointer.info(style="margin-left: 25px", data-position="top", data-delay="10", href="/manutencao/detalhesJobcardCallOut/#{GeneratorHistory[index]._id}", data-tooltip="Details of maintenance") <i class="material-icons activarVerde">info</i>
	block js
		script(type="text/javascript" src="/js/jquery.mask.js")
		script.

			setTimeout(function(){document.getElementById("geradorId").className="activarAzul"}, 50);
			setTimeout(function(){
				
			if(window.innerWidth<600){
			document.getElementById("mySidebar").style.width = "0";
			document.getElementById("main").style.marginLeft= "0";
			document.getElementById("main").style.width="100%";
			document.getElementById("main").style.marginBottom="0";
			document.getElementByClassName("capitalize").style.class="pequeno";
			}
			}, 50);