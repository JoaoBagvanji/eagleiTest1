extends layout
block content
	.row(style="margin-top:15px;margin-bottom: 0px !important;")
		-if(SiteInformation.length>0)
			.row
				.fixed-action-btn.top.fixed-add-bottom
					a(class="btn-floating btn-large activarAzul ") <i class="large material-icons activarVerde">menu</i>
					ul(id="extrairmaintreport")
						li
							a.btn-floating.pointer.activarAzul#extrairmaintreport(data-position="left", data-delay="10", data-tooltip="Export Callout Stats", class="btn-floating btn-large waves-effect waves-light", valor="#{Pacote}") <i class="material-icons activarVerde">file_download</i>
		.row
			if(SiteInformation.length == 0)
				p.center-align.selmecAzul.bold <span data-i18n="demo.ttnumber_form.seminfo"></span>
			else
				.row
					.col.s12.m6
					.col.s12.m6.right.input-field
						i.material-icons.prefix search
						label(for="pesquisador") <span data-i18n="demo.pesquisar"></span>
						input(type="text", id="pesquisador", name="pesquisador", valor="#{Pacote}", style="border-bottom:none !important;")
				h1.center-align.selmecAzul.bold(style="font-size: 1.5em") <span data-i18n="demo.manutencao_form.calloutreports"></span>
				fieldset.no-border.legend-border
					legend.selmecAzul.bold
				table.responsive-table.bordered.striped#myTable
					thead
						tr.selmecAzul
							th <span data-i18n="demo.manutencao_form.sitename"></span>
							th <span data-i18n="demo.manutencao_form.planneddate"></span>
							th TTNumber
							th States
							th <span data-i18n="demo.manutencao_form.technician"></span>
							th Manager
							th <span data-i18n="demo.site_info.regiaoselmec"></span>
							th <span data-i18n="demo.site_info.provincia"></span>
							th 
					tbody(id="myTableUser1")
						-for(var index = 0; index < SiteInformation.length; index++)
							tr.highlight(style="font-family:;color:#12375c")
								td #{SiteInformation[index].sitenumber}
								td #{SiteInformation[index].DataPlaneada.getDate()+'/'+(SiteInformation[index].DataPlaneada.getMonth()+1)+'/'+(SiteInformation[index].DataPlaneada.getFullYear())}
								td #{SiteInformation[index].ttnumber}
								td #{SiteInformation[index].estado}
								td #{SiteInformation[index].tecnico}
								td #{SiteInformation[index].mananger}
								td #{SiteInformation[index].regiao}
								td #{SiteInformation[index].provincia}
								td.center-align
									a.tooltipped.pointer.info(style="margin-left: 25px", data-position="top", data-delay="10", href="/manutencao/detalhesJobcardCallOut/#{SiteInformation[index]._id}", data-tooltip="Details of planned maintenance") <i class="material-icons activarVerde">info</i>												
	block js
		script(type="text/javascript" src="/js/jquery.mask.js")
		script.
			setTimeout(function(){document.getElementById("geradorId").className="activarAzul"}, 50);
			setTimeout(function(){
				
			if(window.innerWidth<600){
			document.getElementById("mySidebar").style.width = "0";
			document.getElementById("main").style.marginLeft= "0";
			document.getElementById("main").style.width="100%";
			document.getElementById("main").style.marginBottom="0";
			document.getElementByClassName("capitalize").style.class="pequeno";
			}
			}, 50);