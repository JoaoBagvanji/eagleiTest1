extends layout
block content
	.row(style="margin-top:15px;margin-bottom: 0px !important;")
		-if(Jobcards.length>0)
			.row
				.fixed-action-btn.top.fixed-add-bottom
					a(class="btn-floating btn-large activarAzul ") <i class="large material-icons activarVerde">menu</i>
					ul(id="extraircredelecreports")
						li
							a.btn-floating.pointer.activarAzul#extraircredelecreports(data-position="left", data-delay="10", data-tooltip="Export Callout Stats", class="btn-floating btn-large waves-effect waves-light", valor="#{pacote}") <i class="material-icons activarVerde">file_download</i>
		.row
			if(Jobcards.length == 0)
				p.center-align.selmecAzul.bold <span data-i18n="demo.ttnumber_form.seminfo"></span>
			else
				.row
					.col.s12.m6
					.col.s12.m6.right.input-field
						i.material-icons.prefix search
						label(for="pesquisador") <span data-i18n="demo.pesquisar"></span>
						input(type="text", id="pesquisador", name="pesquisador", valor="#{pacote}", style="border-bottom:none !important;")
				h1.center-align.selmecAzul.bold(style="font-size: 1.5em") <span data-i18n="demo.manutencao_form.calloutreports"></span>
				fieldset.no-border.legend-border
					legend.selmecAzul.bold
				table.responsive-table.bordered.striped#myTable
					thead
						tr.selmecAzul
							th TTNumber
							th Site
							th Job Type 
							th <span data-i18n="demo.manutencao_form.regiao"></span>
							th <span data-i18n="demo.manutencao_form.provincia"></span>
							th <span data-i18n="demo.manutencao_form.tecniconome1"></span>
							th <span data-i18n="demo.manutencao_form.maintenancedate"></span>
							th Credelec Number
							th 
							th Credelec Amount
							th Credelec Current
							th Credelec After
							th Generator 
							th Electricity_Supply_Type
							th 

					tbody(id="myTableUser1")
						-for(var index = 0; index < Jobcards.length; index++)
							tr.highlight(style="font-family:;color:#12375c")
								td #{Jobcards[index].jobcard_ttnumber}
								td #{Jobcards[index].jobcard_site}
								td #{Jobcards[index].jobcard_jobtype}
								td #{Jobcards[index].jobcard_regiao}
								td #{Jobcards[index].jobcard_provincia}
								td #{Jobcards[index].jobcard_tecniconome}
								td #{Jobcards[index].data_ultimaactualizacaojobcard.getDate()+'/'+(Jobcards[index].data_ultimaactualizacaojobcard.getMonth()+1)+'/'+(Jobcards[index].data_ultimaactualizacaojobcard.getFullYear())}
								td #{Jobcards[index].jobcard_credelecnr}
								td
								td #{Jobcards[index].jobcard_amountadded}
								td #{Jobcards[index].jobcard_currentkwh}
								td #{Jobcards[index].jobcard_kwhafter}
								td #{Jobcards[index].generator}
								td #{Jobcards[index].type}
								td.center-align
									a.tooltipped.pointer.info(style="margin-left: 25px", data-position="top", data-delay="10", href="/manutencao/detalhesJobcardCallOut/#{Jobcards[index]._id}", data-tooltip="Details of maintenance") <i class="material-icons activarVerde">info</i>
	block js
		script(type="text/javascript" src="/js/jquery.mask.js")
		script.
			setTimeout(function(){document.getElementById("geradorId").className="activarAzul"}, 50);
			setTimeout(function(){
				
			if(window.innerWidth<600){
			document.getElementById("mySidebar").style.width = "0";
			document.getElementById("main").style.marginLeft= "0";
			document.getElementById("main").style.width="100%";
			document.getElementById("main").style.marginBottom="0";
			document.getElementByClassName("capitalize").style.class="pequeno";
			}
			}, 50);